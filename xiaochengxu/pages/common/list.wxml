<!--pages/common/list.wxml-->

<template name="job_list">
<view class="weui-panel__bd">
        <navigator class="weui-media-box_appmsg" hover-class="weui-cell_active">
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                <image class="weui-media-box__thumb thumb" src="../../images/logo.png" mode="aspectFit"></image>
            </view> 
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                <view class="weui-media-box__title item-title">{{position_work}}</view>
                <view class="weui-media-box__desc item-school">{{schoolname}}</view>
                <view class="weui-media-box__desc item-request">南昌|专科|不限</view>
            </view>
            <view class="weui-media-box__bd item-right">
                <view class="weui-media-box__title item-salary">3000-5000元</view>
                <view class="weui-media-box__desc item-date">11月26日</view>
            </view>
        </navigator>
    </view>
</template>